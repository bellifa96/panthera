<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
            <!-- ***** Preloader Start ***** -->
            <div id="js-preloader" class="js-preloader">
                <div class="preloader-inner">
                <span class="dot"></span>
                <div class="dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                </div>
            </div>
            <!-- ***** Preloader End ***** -->

            <!-- ***** Header Area Start ***** -->
            <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
                <div class="container">
                <div class="row">
                    <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="{{ path('app_home') }}" class="logo">
                        <h4>Pan<span>thera</span></h4>
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                        <li class="scroll-to-section"><a href="{{ app.request.attributes.get('_route') =="app_home" ?'#top' : path('app_home')~'#top'}}" class="{{ app.request.attributes.get('_route') =="app_home" ?'active' : ''}}">Home</a></li>
                        <li class="scroll-to-section"><a href="{{ app.request.attributes.get('_route') =="app_home" ?'#about' : path('app_home')~'#about'}}">About Us</a></li>
                        <li class="scroll-to-section"><a href="{{ app.request.attributes.get('_route') =="app_home" ?'#services' :  path('app_home')~'#services'}}">Services</a></li>
                        <li class="scroll-to-section"><a href="{{ app.request.attributes.get('_route') =="app_home" ?'#portfolio' :  path('app_home')~'#portfolio'}}">Portfolio</a></li>
                        <li class="scroll-to-section"><a href="{{ app.request.attributes.get('_route') =="app_home" ?'#blog' :  path('app_home')~'#blog'}}">Blog</a></li> 
                        <li class="scroll-to-section"><a href="{{ app.request.attributes.get('_route') =="app_home" ?'#contact' :  path('app_home')~'#contact'}}">Message Us</a></li> 
                        {% if app.user is not empty %}
                            <li><a href="{{ path('app_user_show',{'id':app.user.id})}}">Mon profil</a></li> 
                            <li><a href="{{ path('app_logout') }}"><i class="fa fa-power-off" aria-hidden="true"></i></a></li> 

                        {% else %}
                            <li><a href="{{ path('app_login')}}">Sign in</a></li> 
                        {% endif %}

                        <li class="scroll-to-section"><div class="main-red-button"><a href="#contact">Contact Now</a></div></li> 
                        </ul>        
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                    </div>
                </div>
                </div>
            </header>
            <!-- ***** Header Area End ***** -->
            {% block body %}{% endblock %}
    </body>
</html>
